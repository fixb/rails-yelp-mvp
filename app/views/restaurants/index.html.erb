<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<%= link_to "Add a new restaurant", new_restaurant_path %>
<br>
<% @restaurants.each_with_index do |restaurant, index| %>
  <%= link_to restaurant_path(restaurant.id) do  %>
    <ul>
    <i class="fa fa-square-o" aria-hidden="true"></i>
    <%= index %>-
    <strong><%= restaurant.name %></strong>
    <% end %>
    <%= restaurant.address %>, <%= restaurant.category %> restaurant
    <strong><%= restaurant.reviews.count %> Reviews</strong>
    </ul>
<% end %>
